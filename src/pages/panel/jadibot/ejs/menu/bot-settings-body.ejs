<div class="card">
    <div class="card-header pb-0">
        <h6 >Bot Settings</h6>
    </div>
    <div class="card-body">

        <p class="text-sm">Status</p>
        <div class="form-switch pb-5">
            <input class="form-check-input" type="checkbox" id="checkJadibotIsOnline" onclick="submitChecked(this)" <%= jadibot?.isOnline ? "checked" : "" %>>
            <label class="form-check-label" id="checkJadibotIsOnline">Bot status: <b><%= jadibot?.isOnline ? "Online" : "Offline" %></b> </label>
            <div class="form-check-label" role="status" id="checkJadibotIsOnline"></div>
        </div>


        <p class="text-sm">General</p>
        <div class="form-switch">
            <input class="form-check-input" type="checkbox" id="checkJadibotIsSelf" onclick="submitChecked(this)" <%= jadibot?.isSelf ? "checked" : "" %>>
            <label class="form-check-label" id="checkJadibotIsSelf">Self Bot</label>
            <div class="form-check-label" role="status" id="checkJadibotIsSelf"></div>
        </div>
    </div>
</div>

<script src="/pages/panel/jadibot/js/menu/bot-settings.js" defer></script>