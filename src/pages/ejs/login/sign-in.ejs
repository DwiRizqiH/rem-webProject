<div class="card-body">
    <form role="form" action="/api/login" method="post">
        <input type="hidden" name="id" value="<%= loginId %>">
        <div class="mb-3">
            <input name="user" class="form-control form-control-lg" placeholder="Phone Number or Email"
                aria-label="Phone Number or Email">
        </div>
        <div class="mb-3">
            <input type="password" name="pwd" class="form-control form-control-lg" placeholder="Password"
                aria-label="Password">
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="rememberMe">
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>
        <% if (isWrongPassword) { %>
            <%- include('../warning-badge', { style1: 'padding-top: 10px;', style2: 'color: #f80031; background-color: #fdd1da', textspan: 'Wrong Phone Number or Email or Password' }); %>
        <% } %>
        <% if (isSuccessRegister) { %>
            <%- include('../success-badge', { style1: "padding-top: 10px;", style2: "color: #1aae6f; background-color: #b0eed3;", textspan: "Success Register, Please Login First" }) %> 
        <% } %>
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0" disabled>Sign in</button>
        </div>
    </form>
  </div>
  <div class="card-footer text-center pt-0 px-lg-2 px-1">
    <p class="mb-4 text-sm mx-auto">
      Don't have an account?
      <a href="/register" class="text-primary text-gradient font-weight-bold">Sign up</a>
    </p>
  </div>
  <script src="../assets/js/core/jquery-3.6.0.min.js"></script>